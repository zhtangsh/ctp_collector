{
    "name": "CTP Dev Container",
    "image": "192.168.1.50:29006/tools/ubuntu:20.04",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "setupEnvScript": "/usr/bin/setup-env.sh",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ]
        }
    },
    "postCreateCommand": "apt update && apt install -y build-essential cmake gdb libpthread-stubs0-dev"
}